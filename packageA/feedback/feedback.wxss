.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.content {
  padding: 30rpx;
}
.content textarea {
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
  padding: 30rpx;
  box-shadow: 0 0 20rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10rpx;
}

.type-btn {
  display: flex;
  justify-content: center;
}
.type-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 680rpx;
  height: 90rpx;
  box-shadow: 0 0 16rpx 0 rgba(14, 47, 91, 0.5);
  border-radius: 45rpx;
  color: #ffffff;
  background-color: #f64a48;
}

.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.order-nav {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
  margin: 20rpx;
  box-shadow: 0 0 8rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #999;
}
.order-nav .nav-item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.order-nav .nav-item .icon {
  font-size: 44rpx;
}
.order-nav .nav-selected {
  color: #1a4681;
}
.order-nav .nav-selected .icon {
  color: #1a4681;
}

.order-title {
  display: flex;
  align-items: center;
  margin: 20rpx;
  color: #1a4681;
}
.order-title .icon {
  color: #1a4681;
}

.order-list {
  margin: 0 20rpx;
}
.order-list .item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 8rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10rpx;
}
.order-list .item .item-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #c1c1c1;
}
.order-list .item .order-info {
  display: flex;
  align-items: center;
}
.order-list .item .order-info .info-type {
  flex: none;
  font-size: 24rpx;
  color: #666666;
}
.order-list .item .order-info .info {
  flex: 1;
  margin: 20rpx 0 20rpx 20rpx;
}
.order-list .item .order-info .info .info-name {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order-list .item .order-info .info .info-price {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999999;
}
.order-list .item .order-info .info .info-price .price-box {
  flex: none;
  margin-right: 30rpx;
}
.order-list .item .order-info .info .info-price .price-box .price {
  color: red;
}
.order-list .item .order-info .info .info-price .pay-btn {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 60rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
  color: #ffffff;
  background-color: red;
}
.order-list .item .order-info .info .info-price .pay-get {
  background-color: #f64a48;
}
.order-list .item .order-info .info .info-price .pay-after {
  background-color: #ccc;
}


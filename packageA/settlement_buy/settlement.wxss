.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

page {
  padding-bottom: 150rpx;
}

radio {
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
}

.title {
  display: flex;
  align-items: center;
  padding-top: 15rpx;
}
.title .icon {
  color: #1a4681;
}
.title .title-name {
  font-size: 28rpx;
  color: #999999;
}

.order {
  margin: 20rpx;
  box-shadow: 0 0 8rpx 0 rgba(187, 187, 187, 0.8);
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #999999;
}
.order .order-info {
  padding: 15rpx;
}
.order .arrow {
  position: relative;
}
.order .arrow:after {
  content: "";
  position: absolute;
  top: calc(50% - 8rpx);
  right: 19rpx;
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-style: solid;
  border-color: #C0C0C0;
  transform: rotateZ(45deg);
}

.order .order-info .item .info-type {
  flex: none;
  font-size: 24rpx;
  color: #666666;
}
.order .order-info .item .info {
  flex: 1;
  margin: 20rpx 0 20rpx 20rpx;
}
.order .order-info .item .info .info-name {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order .order-info .item .info .info-price {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999999;
}
.order .order-info .item .info .info-price .price-box {
  margin-right: 30rpx;
}
.order .order-info .item .info .info-price .price-box .price {
  color: red;
}
.order .order-info .item .info .info-number {
  display: flex;
  align-items: center;
}
.order .order-info .item .info .info-number input {
  width: 150rpx;
  border-radius: 10rpx;
  border: solid 1px #ccc;
  text-align: center;
}

.order .order-info .invoice-info {
  display: flex;
  align-items: center;
}
.order .order-info .invoice-info > view:first-child {
  width: 150rpx;
  text-align: right;
}

.footer {
  padding-bottom: 100rpx;
}
.footer .footer-box {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 150rpx;
  width: 100%;
  padding-left: 30rpx;
  border-top: 1px solid #ccc;
  font-size: 28rpx;
  background-color: #fff;
}
.footer .footer-box .box-price {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footer .footer-box .box-price .price > view:first-child {
  color: red;
}
.footer .footer-box .box-price .price > view:last-child {
  color: #666;
  font-size: 20rpx;
}
.footer .footer-box .box-price .total {
  color: red;
}
.footer .footer-box .box-btn {
  flex: none;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: red;
}

.order .order-img {
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
}
.order .order-img image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.order .check {
  width: 100%;
}

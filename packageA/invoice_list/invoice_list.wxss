@charset "UTF-8";
.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.cell-box {
  padding: 0 30rpx;
}
.cell-box .cell {
  display: flex;
  align-items: center;
  padding: 15rpx;
  border-bottom: 1px solid #eee;
  line-height: 1.5;
}
.cell-box .cell .cell-name {
  font-size: 32rpx;
}
.cell-box .cell .cell-address {
  font-size: 22rpx;
  color: #999;
}
.cell-box .cell .cell-left {
  flex: 1;
}
.cell-box .cell .cell-right {
  color: #fff;
  flex: none;
  padding: 10rpx 30rpx;
  background: #f64a48;
  border-radius: 15rpx;
}
.cell-box .cell .cell-del {
  margin-left: 15rpx;
  color: #000;
  flex: none;
  padding: 10rpx 30rpx;
  /*background: #f56c6c;*/
  border-radius: 15rpx;
}

/*模态框*/
.modal-box .box-content {
  box-sizing: border-box;
  position: fixed;
  top: 35%;
  left: 75rpx;
  width: 600rpx;
  z-index: 10;
  background-color: #f2f2f2;
}
.modal-box::after {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.5);
}

.box-content {
  border-radius: 5rpx;
}
.box-content .content-item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.box-content .content-item:not(:last-child) {
  border-bottom: 1px solid #ddd;
}

.add {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  color: #ffffff;
  background-color: #f64a48;
}

@charset "UTF-8";
.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.cart-list {
  padding: 20rpx;
}
.cart-list .item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 0 20rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10rpx;
}
.cart-list .item .icon {
  font-size: 24rpx;
  color: #666666;
}
.cart-list .item .icon::before {
  margin-right: 15rpx;
}
.cart-list .item .icon-select::before {
  color: red;
}
.cart-list .item .item-name {
  margin: 15rpx 0;
  font-size: 26rpx;
  color: #666666;
}
.cart-list .item .item-val {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cart-list .item .item-val .val-price {
  font-size: 28rpx;
  color: red;
}
.cart-list .item .item-val .val-number {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 50rpx;
  border-radius: 10rpx;
  border: solid 1px #ccc;
}
.cart-list .item .item-val .val-number .operation {
  width: 50rpx;
  height: 100%;
  line-height: 45rpx;
  text-align: center;
  color: #999;
}
.cart-list .item .item-val .val-number .operation:first-child {
  line-height: 40rpx;
  border-right: 1px solid #ccc;
}
.cart-list .item .item-val .val-number .operation:last-child {
  border-left: 1px solid #ccc;
}
.cart-list .item .item-val .val-number input {
  width: 120rpx;
  height: 4rpx !important;
  text-align: center;
}


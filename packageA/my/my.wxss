.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.personal-center {
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 400rpx;
  padding-top: 50rpx;
  color: #fff;
}
.personal-center .bg {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 400rpx;
}
.personal-center .head {
  border: 1px solid #fff;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.personal-center .syncAvatar {
  position: absolute;
  z-index: 10;
  right: 0;
  bottom: 0;
  padding: 15rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #ffffff;
  background: none;
}
.personal-center .syncAvatar::after {
  border: none;
}

.cell-list {
  width: 95%;
  margin: 30rpx auto;
  box-shadow: 0 0 30rpx 0 rgba(187, 187, 187, 0.5);
  border-radius: 10px;
}
.cell-list .arrow {
  position: relative;
}
.cell-list .arrow:after {
  content: "";
  position: absolute;
  top: calc(50% - 8rpx);
  right: 34rpx;
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-style: solid;
  border-color: #C0C0C0;
  transform: rotateZ(45deg);
}
.cell-list .cell {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.cell-list .icon {
  width: 50rpx;
}

.type-btn {
  display: flex;
  justify-content: center;
}
.type-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 680rpx;
  height: 90rpx;
  box-shadow: 0 0 16rpx 0 rgba(14, 47, 91, 0.5);
  border-radius: 45rpx;
  color: #ffffff;
  background-color: #f64a48;
}

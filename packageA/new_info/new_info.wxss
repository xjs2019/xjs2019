.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

image {
  width: 100%;
}

.content {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.content .title {
  font-size: 36rpx;
}

.watch {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  margin: 15rpx 0;
}
.watch .icon {
  font-size: 26rpx;
}
.watch view:last-child {
  margin-left: 50rpx;
}

.content {
  color: #666666;
  font-size: 28rpx;
}

button {
  padding: 0;
  background: #FFFFFF;
  border-radius: 0;
}
button::after {
  border: none;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #ccc;
  display: flex;
  height: 100rpx;
  background: #FFFFFF;
}
.footer view {
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer .icon {
  color: #666;
}
.footer .home {
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 5rpx;
  flex: 1;
}
.footer .share {
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 5rpx;
  flex: 1;
}
.footer .cart {
  width: 180rpx;
  color: #FFFFFF;
  background: #ff9d00;
}
.footer .pay {
  width: 180rpx;
  color: #FFFFFF;
  background: #ed4f50;
}

.poster {
  position: fixed;
  top: 20%;
  left: 12%;
  z-index: 200;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 280px;
  background: #fff;
  padding: 30rpx 15rpx;
  border-radius: 10rpx;
}
.poster .cvs {
  margin-bottom: 15rpx;
}
.poster .poster_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 80rpx;
  border-radius: 80rpx;
  color: #FFF;
  background: #f64a48;
}

.mu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background-color: #000000;
}

.action-sheet-share {
  line-height: 1.35;
}

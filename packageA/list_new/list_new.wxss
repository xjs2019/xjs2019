page{background: #ecebe7;}
.null {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 300rpx;
}
.null .null-img {
  width: 400rpx;
}
.null .null-desc {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #999999;
}

.new_item {
  /*display: flex;*/
  margin: 30rpx;
   border-radius: 20rpx; background: #fff; 
}
.new_item image {
  flex: none;
}
.new_item .item-content {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between; padding: 10px 0;
}
.new_item .item-content .title {
  color: #333;
}
.new_item .item-content .watch {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}
.new_item .item-content .watch {
  font-size: 32rpx; 
}

/* .new_item .item-content .watch view:last-child {
